{% extends "@SonataAdmin/CRUD/list_url.html.twig" %}
{# @var \App\Admin\AbstractAdmin admin #}
{# @var \App\Entity\Page\AbstractPage object  #}

{% block field %}
    {% if object.slug %}
        {% if object.slug == 'homepage' %}
            {% set value = path('web.homepage', {'_locale': defaultLocale}) %}
        {% else %}
            {% set value = path('web.cms', {'slug': object.slug, '_locale': defaultLocale}) %}
        {% endif %}
    {% endif %}

    {{ parent() }}
{% endblock %}
