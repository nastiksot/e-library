{% extends "@SonataAdmin/CRUD/base_list_field.html.twig" %}
{# @var \App\Admin\User\DealerUserAdmin admin #}
{# @var \App\Entity\User\User object  #}

{% block field %}
    {% if object.roles %}
        {% set value = '' %}

        {% for role in object.roles %}
            {% set value = value ~ ('USER_ENTITY.ROLE.' ~ role)|trans({}, 'SonataAdminBundle') ~ ', ' %}
        {% endfor %}

        {% set value = value|trim(', ') %}
    {% endif %}

    {{ parent() }}
{% endblock %}
