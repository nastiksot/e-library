{% extends "@SonataAdmin/CRUD/list_string.html.twig" %}
{# @var \App\Admin\AbstractAdmin admin #}
{# @var \App\Entity\Product\Product object #}

{% block field %}
    {% if object.priceOnRequest %}
        {{ 'PRODUCT_ENTITY.VIEW.PRICE_ON_REQUEST'|trans({'%PRICE%': object.price}, admin.translationDomain) }}
    {% elseif object.price and object.priceEnd %}
        {{ 'PRODUCT_ENTITY.VIEW.PRICE_RANGE'|trans({'%PRICE%': object.price, '%PRICE_END%': object.priceEnd}, admin.translationDomain) }}
    {% elseif object.price %}
        {{ 'PRODUCT_ENTITY.VIEW.PRICE'|trans({'%PRICE%': object.price}, admin.translationDomain) }}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}
