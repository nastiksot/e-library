{# @see '@SonataAdmin/CRUD/list__action_edit.html.twig' #}
{# @var \App\Admin\AbstractAdmin admin #}
{# @var \App\Entity\Reading object #}

{% if admin.hasAccess('prolong_cancel', object) and admin.hasRoute('prolong_cancel') %}
    {% set button_content = sonata_config.getOption('list_action_button_content') %}
    <a
        href="{{ admin.generateObjectUrl('prolong_cancel', object, actions.link_parameters|default([])) }}"
        class="btn btn-sm btn-default cancel_link"
        title="{{ 'READING_ENTITY.BUTTON.PROLONG_CANCEL'|trans({}, 'SonataAdminBundle') }}"
    >
        {% if button_content == 'icon' or button_content == 'all' %}
            <i class="fas fa-trash" aria-hidden="true"></i>
        {% endif %}
        {% if button_content == 'text' or button_content == 'all' %}
            {{ 'READING_ENTITY.BUTTON.PROLONG_CANCEL'|trans({}, 'SonataAdminBundle') }}
        {% else %}
            <span class="sr-only">
                {{ 'READING_ENTITY.BUTTON.PROLONG_CANCEL'|trans({}, 'SonataAdminBundle') }}
            </span>
        {% endif %}
    </a>
{% endif %}
