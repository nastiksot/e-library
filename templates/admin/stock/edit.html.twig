{% extends '@SonataAdmin/CRUD/edit.html.twig' %}
{# @var \App\Entity\Book\Stock object #}

{% block form %}

    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h4 class="box-title">
                        {{ 'BOOK_ENTITY.SECTION.MAIN'|trans({}, 'SonataAdminBundle') }}
                    </h4>
                </div>
                <div class="box-body">
                    <div class="sonata-ba-collapsed-fields">

                        <div class="form-group">
                            <label class="control-label">
                                {{ 'BOOK_ENTITY.LABEL.NAME'|trans({}, 'SonataAdminBundle') }}
                            </label>
                            <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                {{ object.book ? object.book : null }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">
                                {{ 'BOOK_ENTITY.LABEL.DESCRIPTION'|trans({}, 'SonataAdminBundle') }}
                            </label>
                            <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                {{ object.book ? object.book.description : null }}
                            </div>
                        </div>

                        {% if object.book and object.book.authors %}
                            <div class="form-group">
                                <label class="control-label">
                                    {{ 'BOOK_ENTITY.LABEL.AUTHORS'|trans({}, 'SonataAdminBundle') }}
                                </label>
                                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                    {% for author in object.book.authors %}
                                        {{ author }} <br/>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}

                        {% if object.book and object.book.categories %}
                            <div class="form-group">
                                <label class="control-label">
                                    {{ 'BOOK_ENTITY.LABEL.CATEGORIES'|trans({}, 'SonataAdminBundle') }}
                                </label>
                                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                    {% for category in object.book.categories %}
                                        {{ category }} <br/>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}

                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ parent() }}
{% endblock %}
