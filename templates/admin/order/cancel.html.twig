{% extends '@SonataAdmin/CRUD/delete.html.twig' %}

{% block content %}
    <div class="sonata-ba-cancel">
        <div class="box box-danger">
            <div class="box-header">
                <h3 class="box-title">{{ 'ORDER_ENTITY.MESSAGE.CANCEL.TITLE'|trans({}, 'SonataAdminBundle') }}</h3>
            </div>
            <div class="box-body">
                {{ 'ORDER_ENTITY.MESSAGE.CANCEL.CONFIRM'|trans({'%order%': order.id}, 'SonataAdminBundle') }}
            </div>
            <div class="box-footer clearfix">
                <form method="POST" action="{{ admin.generateObjectUrl('cancel', object) }}">
                    <input type="hidden" name="_sonata_csrf_token" value="{{ csrf_token }}">

                    <button type="submit" name="btn_delete" class="btn btn-danger">
                        <i class="fas fa-trash-alt" aria-hidden="true"></i>
                        {{ 'ORDER_ENTITY.MESSAGE.CANCEL.SUBMIT'|trans({}, 'SonataAdminBundle') }}
                    </button>

                    {% if admin.hasRoute('list') and admin.hasAccess('list') %}
                        {{ 'delete_or'|trans({}, 'SonataAdminBundle') }}

                        <a class="btn btn-success" href="{{ admin.generateUrl('list') }}">
                            <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                            {{ 'link_action_list'|trans({}, 'SonataAdminBundle') }}</a>
                    {% endif %}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
